<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenqincheng.flexible.code.gen.infrastructure.database.ProjectMapper">

    <select id="dropdown" resultType="com.chenqincheng.flexible.code.gen.application.dto.LabelValueVO">
        select code as value, name as label from project where 1=1
        <if test="keyword != null and keyword != ''">
            and name like concat('%', #{keyword}, '%')
        </if>
    </select>
</mapper>